# Nginx configuration for ZilRemit
# This is an example configuration file
# Copy the relevant sections to your nginx server block

server {
    listen 80;
    server_name zilremit.com www.zilremit.com;
    root /var/www/zilremit/dist;
    index index.html;

    # SPA routing - try files, then fallback to index.html
    # React Router will handle 404s and redirect to /404.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Serve 404.html when directly accessed
    location = /404.html {
        try_files /404.html =404;
    }

    # Security headers
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss;

    # Cache static assets
    location ~* \.(jpg|jpeg|png|gif|ico|svg|css|js|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Don't cache HTML files
    location ~* \.html$ {
        expires 1h;
        add_header Cache-Control "public, must-revalidate";
    }
}
